<!--index.wxml-->
<view class="container"> 
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view bindtap='toNotes' class='go-btn'>
    <view animation="{{animationData}}"><text class='icon iconfont icon-yuzhouxingqiu-13'></text></view>
  </view>
  <view bindtap='toTimeline'>
    <text class='icon iconfont icon-yuzhouxingqiu-15'></text>
  </view>
  <view bindtap='toContent'>
    <text class='icon iconfont icon-shape-'></text>
  </view>
</view>