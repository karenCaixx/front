/* index.wxss */
@import "../../utils/loading5/loading.wxss";
.main {
  margin-top: 50rpx;
  width: 86%; 
  min-height: 400rpx; 
  text-align: justify; 
  padding: 12rpx 12rpx 12rpx 80rpx;
  font-size: 16px;
  border: 1rpx solid #ddd;
  border-style: groove;
  border-radius: 15%;
}

.weax-icon {
  font-size: 18px;
}

.icon-tap {
  -webkit-animation: iconScales 2.0s infinite ease-in-out;
  animation: iconScales 2.0s infinite ease-in-out;
}

@keyframes iconScales {
  0% { -webkit-transform: scale(0); opacity: 0; }
  50% { -webkit-transform: scale(1.5)}
  100% { -webkit-transform: scale(1.0); }
}

.title text {
  color: #999;
}

.save-btn {
  width: 50%;
  background: none;
  border: none !important;
  margin-top: 100rpx;
  font-style: italic;
  text-decoration: line-through;
  -moz-text-decoration: line-through;
}

.oh {
  text-align: justify;
  padding: 0 20rpx;
}

.oh .icon {
  background-color: #fff; 
}

.tip {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  z-index: 9;
  transform: rotate(5deg) scale(2.8);
}

.weax-icon.true{
  background: #eee;
}